<Window x:Class="WPF_for_Powershell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Powershell Admin GUI" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        >
    
    <!-- INSERT_STYLE_PLACEHOLDER -->

    <Window.TaskbarItemInfo>
         <TaskbarItemInfo/>
    </Window.TaskbarItemInfo>
    <Grid Name="mainGrid">
        <Grid Name="searchGrid" Margin="10,10,10,0" Height="40" VerticalAlignment="Top">
            <Border Style="{StaticResource searchboarder}"/>
            <ComboBox Margin="10,0,50,0" VerticalAlignment="Center" Height="25" IsEditable="True" Name="searchcombox"/>
            <Button Name="infobutton" Content="i" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" Width="30" Height="30" FontSize="18"/>
        </Grid>
        <Grid Name="functionGrid" Margin="10,60,10,10">
            <Border Style="{StaticResource functionboarder}"/>


            <!-- INSERT_FUNCTIONS_PLACEHOLDER -->


        </Grid>

    </Grid>

</Window>